# Approvia Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenAI API Configuration
VITE_OPENAI_API_KEY=your_openai_api_key

# Notification Configuration
# Slack Webhook URL (optional)
VITE_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Service Configuration (optional)
# Choose one: sendgrid, mailgun, or smtp
VITE_EMAIL_SERVICE=sendgrid
VITE_EMAIL_API_KEY=your_email_service_api_key
VITE_EMAIL_FROM=noreply@yourdomain.com
VITE_EMAIL_DOMAIN=yourdomain.com

# For SendGrid:
# VITE_EMAIL_SERVICE=sendgrid
# VITE_EMAIL_API_KEY=SG.your_sendgrid_api_key

# For Mailgun:
# VITE_EMAIL_SERVICE=mailgun
# VITE_EMAIL_API_KEY=key-your_mailgun_api_key
# VITE_EMAIL_DOMAIN=yourdomain.com

# For SMTP (basic implementation):
# VITE_EMAIL_SERVICE=smtp
# VITE_EMAIL_API_KEY=your_smtp_password
# VITE_EMAIL_FROM=noreply@yourdomain.com

# Application Configuration
VITE_APP_NAME=Approvia
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_AI_INSIGHTS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_ESG_CALCULATOR=true

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Development Configuration
# Set to true to enable debug logging
VITE_DEBUG_MODE=false

# Currency API Configuration
# Default exchange rate API (already implemented in Supabase function)
# No additional configuration needed for basic functionality

# File Upload Configuration
VITE_MAX_FILE_SIZE=10
VITE_MAX_FILES=10
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain 